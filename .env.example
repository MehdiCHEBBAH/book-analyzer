# Book Analyzer Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Groq API Configuration
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Optional: Groq Model Configuration
# Default model: openai/gpt-oss-120b (fast and cost-effective)
GROQ_MODEL=openai/gpt-oss-120b

# Optional: LLM Response Configuration
# Temperature controls randomness (0.0 = deterministic, 1.0 = very random)
GROQ_TEMPERATURE=0.7

# Required: Upstash Redis Configuration
# Get your Redis credentials from https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Optional: Application Configuration
NODE_ENV=development
